generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Medication {
  id           Int      @id @default(autoincrement())
  userId       Int
  name         String
  dosage       String
  frequency    String
  startDate    DateTime
  endDate      DateTime?
  notes        String?
  reminderTime String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
}
